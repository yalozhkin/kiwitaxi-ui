link(rel='shortcut icon' href= path.images + 'favicon.ico' type='image/x-icon')
link(rel='apple-touch-icon' href= path.images + 'apple-touch-icon.png')
link(rel='stylesheet' href= path.styles + 'main.css')


block title
  = page.home.title

block header
  section.hero
    .offset
      h1= page.home.title
      p.lead= page.home.subtitle

    .offset
      include components/search

block main
  section.offset
    h2= page.home.section.tariffs
    .grid
      - var n = 0
        while n < 6
          .column
            .card
              include components/tariff
              - n++
