extends layouts/_base

block title
  = place.title

block heading
  h1= place.title

block main
  .grid.tight.is-scrollable
    - var n = 0
    while n < 6
      .card.is-clickable
        +offer-small
        - n++

  h2= place.destinations.title
  .grid.tight
    - var n = 0
    while n < 12
      .card.zero.is-clickable
        +place
        - n++

block secondary
  h3= place.activity.title
  .grid.comfort
    - var n = 0
    while n < 3
      .card.gray
        +activity
        - n++

block seo
  +seo(place.seo.title, place.seo.content)
